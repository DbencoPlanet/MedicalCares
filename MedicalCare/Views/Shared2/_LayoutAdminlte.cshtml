    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <link rel="stylesheet" href="~/adminlte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-blue fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            @Html.Partial("_Logo")
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-building-o"></i>
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <small>Super Admin.</small>

                                }
                                else if (User.IsInRole("Admin"))

                                {
                                    <small>Admin.</small>

                                }

                                else if (User.IsInRole("Doctor"))

                                {
                                    <small>Doctor.</small>

                                }
                                else if (User.IsInRole("Nurse"))

                                {
                                    <small>Nurse.</small>

                                }
                                else if (User.IsInRole("Patient"))

                                {
                                    <small>Patient</small>

                                }
                                else if (User.IsInRole("Pharmacist"))

                                {
                                    <small>Pharmacist</small>

                                }

                                else if (User.IsInRole("Laboratorist"))

                                {
                                    <small>Laboratorist</small>

                                }

                                else if (User.IsInRole("Accountant"))

                                {
                                    <small>Accountant</small>

                                }
                                else if (User.IsInRole("Receptionist"))

                                {
                                    <small>Receptionist</small>

                                }
                                else if (User.IsInRole("Employee"))

                                {
                                    <small>Employee</small>

                                }
                                else
                                {
                                    <small>Non</small>
                                }
                            </a>
                        </li>
                        <!-- User Account: style can be found in dropdown.less -->
                        @Html.Partial("_ProfileSignout")
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                @Html.Partial("_UserPanel");

                @if (appUser != null)
                {
                    <ul class="sidebar-menu" data-widget="tree">
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            @Html.Partial("~/Views/Shared/_AdminMenu.cshtml")
                        }
                        @if (User.IsInRole("Doctor"))
                        {
                            @Html.Partial("~/Views/Shared/_DoctorMenu.cshtml")
                        }
                        @if (User.IsInRole("Nurse"))
                        {
                            @Html.Partial("~/Views/Shared/_NurseMenu.cshtml")
                        }
                        @if (User.IsInRole("Patient"))
                        {
                            @Html.Partial("~/Views/Shared/_PatientMenu.cshtml")
                        }
                        @if (User.IsInRole("Pharmacist"))
                        {
                            @Html.Partial("~/Views/Shared/_PharmacistMenu.cshtml")
                        }
                        @if (User.IsInRole("Laboratorist"))
                        {
                            @Html.Partial("~/Views/Shared/_LaboratoristMenu.cshtml")
                        }
                        @if (User.IsInRole("Accountant"))
                        {
                            @Html.Partial("~/Views/Shared/_AccountantMenu.cshtml")
                        }
                        @if (User.IsInRole("Receptionist"))
                        {
                            @Html.Partial("~/Views/Shared/_ReceptionistMenu.cshtml")
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            @Html.Partial("~/Views/Shared/_EmployeeMenu.cshtml")
                        }
                    </ul>
                }

            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        @Html.Partial("_Footer")
    </div>
    <!-- ./wrapper -->
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <!--jqueryUI-->
        <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script>
        <!--datatables.net-->
        <script src="~/lib/DataTables/datatables.min.js"></script>
        <!--serializeJSON-->
        <script src="~/lib/marioizquierdo-jquery.serializeJSON/jquery.serializejson.min.js"></script>
