@using Microsoft.AspNetCore.Identity
@using MedicalCare.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    ApplicationUser appUser = await UserManager.GetUserAsync(User);

    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="../@appUser.ProfilePicture" class="profile-picture user-image" alt="User Image">
            <span class="profile-fullName hidden-xs">@appUser.Fullname</span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
                <img src="../@appUser.ProfilePicture" class="profile-picture img-circle" alt="User Image">
                <p>
                    <span class="profile-fullName">@appUser.Fullname</span>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <small>Super Admin.</small>

                    }
                    else if (User.IsInRole("Admin"))

                    {
                        <small>Admin.</small>

                    }

                    else if (User.IsInRole("Doctor"))

                    {
                        <small>Doctor.</small>

                    }
                    else if (User.IsInRole("Nurse"))

                    {
                        <small>Nurse.</small>

                    }
                    else if (User.IsInRole("Patient"))

                    {
                        <small>Patient</small>

                    }
                    else if (User.IsInRole("Pharmacist"))

                    {
                        <small>Pharmacist</small>

                    }

                    else if (User.IsInRole("Laboratorist"))

                    {
                        <small>Laboratorist</small>

                    }

                    else if (User.IsInRole("Accountant"))

                    {
                        <small>Accountant</small>

                    }
                    else if (User.IsInRole("Receptionist"))

                    {
                        <small>Receptionist</small>

                    }
                    else if (User.IsInRole("Employee"))

                    {
                        <small>Employee</small>

                    }
                    else
                    {
                        <small>Non</small>
                    }
                </p>
                    </li >

                    <!--Menu Footer-->
                    <li class="user-footer">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <div class="pull-left">
                            <a asp-controller="UserManager" asp-action="UserProfile" class="btn btn-default btn-flat">Profile</a>
                        </div>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-default btn-flat">Log out</button>
                        </div>
                    </form>

</li>

        </ul>
    </li>


}
