@model MedicalCare.Models.ApplicationUser

<header class="main-header">
    <!-- Logo -->
    <a href="@MedicalCare.MVC.Pages.HomeIndex.Url" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>M</b>C</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>MEDICAL</b>CARE</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                @if (Model != null)
                {
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="@Model.ProfilePicture" class="user-image" alt="User Image">
                            <span class="hidden-xs">@Model.Email</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="@Model.ProfilePicture" class="img-circle" alt="User Image">
                                <p>
                                    @Model.Email
                                </p>
                                <p>
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <small>Super Admin.</small>

                                    }
                                    else if (User.IsInRole("Admin"))

                                    {
                                        <small>Admin.</small>

                                    }

                                    else if (User.IsInRole("Doctor"))

                                    {
                                        <small>Doctor.</small>

                                    }
                                    else if (User.IsInRole("Nurse"))

                                    {
                                        <small>Nurse.</small>

                                    }
                                    else if (User.IsInRole("Patient"))

                                    {
                                        <small>Patient</small>

                                    }
                                    else if (User.IsInRole("Pharmacist"))

                                    {
                                        <small>Pharmacist</small>

                                    }

                                    else if (User.IsInRole("Laboratorist"))

                                    {
                                        <small>Laboratorist</small>

                                    }

                                    else if (User.IsInRole("Accountant"))

                                    {
                                        <small>Accountant</small>

                                    }
                                    else if (User.IsInRole("Receptionist"))

                                    {
                                        <small>Receptionist</small>

                                    }
                                    else if (User.IsInRole("Employee"))

                                    {
                                        <small>Employee</small>

                                    }
                                    else
                                    {
                                        <small>Non</small>
                                    }
                                </p>
                            </li>

                            <!-- Menu Footer-->

                            <li class="user-footer">

                                <div class="pull-left">
                                    <a href="@Url.Action("ChangePassword", "Manage")" class="btn btn-default btn-flat">Change Password</a>
                                </div>

                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                    @*<div class="pull-left">
                                        <a asp-controller="UserManager" asp-action="UserProfile" class="btn btn-default btn-flat">Profile</a>
                                    </div>*@
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-default btn-flat">Sign out</button>
                                    </div>
                                </form>

                            </li>
                        </ul>
                    </li>

                }




            </ul>
        </div>
    </nav>
</header>